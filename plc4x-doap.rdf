                <revision>0.3.0</revision>
            </Version>
        </release>
        <release>
            <Version>
                <name>Legacy 0.2.0 release</name>
                <created>2018-12-02</created>
                <revision>0.2.0</revision>
            </Version>
        </release>
        <release>
            <Version>
                <name>Legacy 0.1.0 release</name>
                <created>2018-10-05</created>
                <revision>0.1.0</revision>
            </Version>
        </release>
